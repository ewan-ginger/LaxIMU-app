---
import projects from "../collections/projects.json";
import ProjectThumb from "../components/ProjectThumb.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Projects">
  <h1 class="font-[Jura] font-semibold text-5xl text-text-nav pb-8">
    Crafting unique digital experiences where code and creativity converge to shape your vision in your everyday.
  </h1>
  <section class="relative w-full mx-auto lg:px-0">
    <div
      class="grid items-stretch w-full grid-cols-1 my-8 gap-1 sm:grid-cols-2"
    >
      {
        projects.map((project) => {
          if (project.row == 1) {
            return (
            <ProjectThumb
              name={project.name}
              image={project.image}
              url={project.url}
            />
          )
          }
        })
      }
    </div>
    <div
      class="grid items-stretch w-full grid-cols-1 my-8 gap-1 sm:grid-cols-3"
    >
      {
        projects.map((project) => {
          if (project.row == "other") {
            return (
            <ProjectThumb
              name={project.name}
              image={project.image}
              url={project.url}
            />
          )
          }
        })
      }
    </div>
  </section>
</BaseLayout>
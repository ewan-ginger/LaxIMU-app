---
import BaseLayout from '../layouts/BaseLayout.astro';
import projects from "../collections/projects.json";
import ProjectThumb from "../components/ProjectThumb.astro";
---

<BaseLayout title="Ginger Workshops">
    <div class="grid md:gap-10 grid-cols-1 lg:grid-cols-4">
        <div class="grid md:grid-rows-2 col-span-2 h-min">
            <h1 class="h-min align-bottom font-[Jura] font-semibold text-5xl md:text-7xl text-black dark:text-white pb-8 text-left">
                Welcome to my workshop, <span class="text-blue-medium dark:text-blue-medium" >I'm Ewan Ginger.</span>
            </h1>
            <h1 class="h-min font-[Jura] font-semibold text-2xl md:text-4xl text-text-nav text-left pb-8">
                A Design Engineer at Imperial College London.
            </h1>    
        </div>
        <div class="col-span-2 pb-8">
          <script type="module" src="https://unpkg.com/@splinetool/viewer@1.9.32/build/spline-viewer.js" async></script>
          <spline-viewer hint loading-anim-type="spinner-small-dark" url="https://prod.spline.design/JoCOTQXgmkt5G2ru/scene.splinecode"><img src="data:image/png;base64," alt="Spline preview" style="width: 100%; height: 100%;"/></spline-viewer>
        </div>
    </div>
    <a class="w-full"
        href="/projects"
    >
      <h2 class="w-full text-left pb-8 text-4xl md:text-6xl font-bold font-['Jura'] text-black dark:text-white">
        <span class="md:text-4xl text-blue-medium">âž”</span> Recent Projects
      </h2>
    </a>
    <div
      class="grid items-stretch w-full grid-cols-1 my-8 gap-1 sm:grid-cols-3"
    >
      {
        projects.map((project) => {
          if (project.recent) {
            return (
            <ProjectThumb
              name={project.name}
              description={project.description}
              image={project.image}
              url={project.url}
            />
          )
          }
        })
      }
    </div>
</BaseLayout>